    """
    @property
    def 迭代步数(self):
        steps = None
        if self.计算步长 == "秒":
            steps = 7200
        elif self.计算步长 == "小时" and self.计算模式 is None:
            steps = 8760
        else:
            return None
        assert len(self.风资源) == steps
        assert len(self.光资源) == steps
        assert len(self.气温) == steps
        return steps
